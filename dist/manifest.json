{
  "manifest_version": 3,
  "name": "Text Spacer",
  "version": "0.0.4",
  "description": "Insert space between English and Japanese characters.",
  "permissions": ["activeTab", "contextMenus"],
  "action": {
    "default_title": "Text Spacer",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
